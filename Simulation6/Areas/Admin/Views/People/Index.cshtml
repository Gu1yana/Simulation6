@model List<PeopleGetVM>

@{
    int order = 1;
}
<table class="table">
    <thead class="thead-dark">
        <a class="btn btn-success" asp-action="Create"> Create</a>

        <tr>
            <th scope="col">No</th>
            <th scope="col">Image</th>
            <th scope="col">Fullname</th>
            <th scope="col">Description</th>
            <th scope="col">Profession</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var people in Model)
        {
            <tr>
                <th scope="row">@(order++)</th>
                <td><img width="65" src="~/images/@people.ImageUrl" /></td>
                <td>@people.Fullname</td>
                <td>@people.Description</td>
                <td>@people.Profession.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@people.Id"> Update</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-route-id="@people.Id"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>